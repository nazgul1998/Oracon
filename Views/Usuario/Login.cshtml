@if (TempData["LoginUsuario"] != null)
{
    <div class="row alert alert-danger" style="margin:0;padding:0; text-align:center">
        @TempData["LoginUsuario"]
    </div>
}
<div class="row">

    <div class="col-sm-6" style="align-content:center;
align-items:center">
        <img width="100%" height="105%" class="img" alt="imgLoginUsuario" src="~/images/DSC05713.jpg" />
    </div>
    <div class="col-sm-6" style="align-content:center; align-items:center; text-align:center">
        <br />
        <img width="18%" height="18%" alt="icoLoginUsuario" style="border:5%" src="~/images/20.png" />
        <h1 class="display-3">Iniciar sesión</h1>
        <form action="/Usuario/Login" method="post">
            <br />
            <div class="form-group">
                <label class="form-text">Usuario: </label>
                <input placeholder="Ej. usuario123" class="form-control" type="text" name="usuario" />

            </div>
            <div class="form-group">
                <label class="form-text">Contraseña: </label>
                <input class="form-control" type="password" name="passwd" />

            </div>
            <button class="btn" style="color:white; background-color:#ff2f00;" type="submit">Iniciar sesión</button>
        </form>

        <label class="form-text">¿No tienes una cuenta?</label><a class="btn-link" style="color: #ff2f00;" href="/Usuario/Create">Regístrate aquí</a>
    </div>
</div>


