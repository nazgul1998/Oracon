<h1 class="display-4" style="text-align:center;">Agregar curso</h1>

<div class="container">
    <form action="/Admin/AgregarCurso" method="post">
        <label class="form-label">Nombres: </label>
        <input class="form-control" type="text" name="nombre" />
        <br />
        <label class="form-label">Descripcion: </label>
        <textarea class="form-control" name="descripcion"></textarea>
        <br />
        <label class="form-label">Video presentacion inicial: <a target="_blank" href="https://www.youtube.com/embed/8RnbtXPVbTA">Tutorial</a> </label>
        <input class="form-control" type="url" name="videoPresentacion" />
        <br />
        <label class="form-label">Profesor: </label> <label>No se encuentra en la lista?
        <a href="/Admin/CreateDoctor">Registre un nuevo docente</a></label>
        <select class="form-control" name="idProfesor">
            @foreach (var z in ViewBag.Profesores)
            {
                <option value="@z.idProfesor">@z.nombres @z.apellidos - @z.titulo</option>
            }
        </select>
        <br />
        <label class="form-label">Precio: </label>
        <input class="form-control" type="number" step="0.01" name="precio" />
        <br />
        <label class="form-label">Estado: </label>
        <select class="form-control" name="estado">

            <option value="ACTIVO">Activo</option>
            <option value="NO ACTIVO">No Activo</option>

        </select>

        <br /><br />
        <div style="align-content:center; align-items:center; text-align:center;">
            <button class="btn" style="background-color:#ff2f00; color:white;" type="submit">Crear</button>
            <a style="color:#ff2f00;" href="/Admin/VerProfesores">Cancelar</a>
        </div>

    </form>
</div>


