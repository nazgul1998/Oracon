<h1 class="display-4" style="text-align:center;">Agregar video</h1>
<div class="container">
    <br />
    <form action="/Profesor/AgregarVideoModulo" method="post">
        <input hidden name="idModulo" value="@ViewBag.IdModulo" />
        <label class="form-label">Titulo del video: </label>
        <input name="titulo" type="text" class="form-control" placeholder="Ej: Este es un titulo" />
        <br />
        <label class="form-label">Descripcion: </label>
        <textarea class="form-control" name="descripcion" type="text" placeholder="Ej: Esta es una descripcion"></textarea>
        <br />
        <label class="form-label">Enlace: (YOUTUBE) <a target="_blank" href="https://www.youtube.com/embed/8RnbtXPVbTA">Tutorial</a> </label>
        <input name="link" type="url" class="form-control" placeholder="Ej: https://www.youtube.com/embed/8RnbtXPVbTA" />
        <br />
        <br />
        <div style="align-content:center; align-items:center; text-align:center;">
            <button class="btn" style="background-color:#ff2f00; color:white;" type="submit">Crear</button>
            <a style="color:#ff2f00;" href="/Profesor/VerMaterialModulo?idModulo=@ViewBag.IdModulo">Cancelar</a>
        </div>
    </form>
</div>
