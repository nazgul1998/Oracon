    <div class="container">
        <br />
        <div class="row alert alert-warning" style="margin:0;padding:0; text-align:center; align-items:center;">
            No se han registrado enlaces en este modulo.
        </div>
    </div>
}

<br />
<div class="container">
    <h2 class="display-5">Tareas</h2>
    <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/AgregarTareaModulo?idModulo=@ViewBag.Modulo.idModulo">Agregar tarea</a>
</div>

@if (ViewBag.Tareas.Count > 0)
{
    <div class="container">
        <table class="table">
            <thead style="background-color:black; color:white;">
                <tr>
                    <th>Nombre de la tarea</th>
                    <th>Fecha limite</th>
                    <th>Fecha de creacion</th>
                    <th>instrucciones</th>
                    <th></th>
                </tr>

            </thead>


            <tbody>
                @foreach (var tarea in ViewBag.Tareas)
                {
                    <tr>
                        <td>@tarea.nombre</td>
                        <td>@tarea.fechaMaxima</td>
                        <td>@tarea.fechaCreacion</td>
                        <td>@tarea.instrucciones</td>
                        <td>

                            <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/VerEntregas?idTarea=@tarea.idTarea"> Ver entregas </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <div class="container">
        <br />
        <div class="row alert alert-warning" style="margin:0;padding:0; text-align:center; align-items:center;">
            No se han registrado tareas en este modulo.
        </div>
    </div>
}
<br />
