<h1 class="display-4" style="text-align:center;">Material de estudio</h1>
<br />
@if (TempData["AgregarRecurso"] != null)
{
    <div class="row alert alert-warning" style="margin:0;padding:0; text-align:center; align-items:center;">
        @TempData["AgregarRecurso"]
    </div>
}
<div class="container">
    <h2 class="display-5">Videos</h2>
    <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/AgregarVideoModulo?idModulo=@ViewBag.Modulo.idModulo">Agregar video</a>

</div>
@if (ViewBag.Videos.Count > 0)
{
    <div class="container">
        <table class="table">
            <thead style="background-color:black; color:white;">
                <tr>
                    <th>Titulo del video</th>
                    <th>Descripcion</th>
                    <th></th>
                </tr>
            </thead>


            <tbody>
                @foreach (var video in ViewBag.Videos)
                {
                    <tr>
                        <td>@video.titulo</td>
                        <td>@video.descripcion</td>
                        <td>
                            <a href="@video.link" class="btn" style="background-color:#ff2f00; color:white" target="_blank">Ver Video</a>
                        </td>

                    </tr>
                }




            </tbody>
        </table>

    </div>


}
else
{
    <div class="container">
        <br />
        <div class="row alert alert-warning" style="margin:0;padding:0; text-align:center; align-items:center;">
            No se han registrado videos en este modulo.
        </div>
    </div>

}
<br />
<div class="container">
    <h2 class="display-5">Documentos</h2>
    <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/AgregarDocumentoModulo?idModulo=@ViewBag.Modulo.idModulo">Agregar documento</a>
</div>
@if (ViewBag.Documentos.Count > 0)
{
    <div class="container">
        <table class="table">
            <thead style="background-color:black; color: white;">
                <tr>
                    <th>Titulo del documento</th>
                    <th>Descripcion</th>
                    <th></th>
                </tr>

            </thead>


            <tbody>
                @foreach (var documento in ViewBag.Documentos)
                {
                    <tr>
                        <td>@documento.titulo</td>
                        <td>@documento.descripcion</td>
                        <td>
                            @Html.ActionLink("Descargar", "PDFDisplay", "Profesor", new { idDocumento = documento.idDocumento }, new { target = "_blank" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


}
else
{
    <div class="container">
        <br />
        <div class="row alert alert-warning" style="margin:0;padding:0; text-align:center; align-items:center;">
            No se han registrado Documentos en este modulo.
        </div>
    </div>
}
<br />
<div class="container">
    <h2 class="display-5">Enlaces externos</h2>
    <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/AgregarEnlaceModulo?idModulo=@ViewBag.Modulo.idModulo">Agregar enlace externo</a>
</div>


@if (ViewBag.Enlaces.Count > 0)
