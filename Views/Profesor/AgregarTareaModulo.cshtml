<h1 style="text-align:center" class="display-4">Agregar tarea</h1>
<br />
<div class="container">
    <form action="/Profesor/AgregarTareaModulo" method="post" enctype="multipart/form-data">
        <input hidden name="idModulo" value="@ViewBag.IdModulo" />
        <label class="form-label">Titulo de la tarea: </label>
        <input class="form-control" name="nombre" type="text" />
        <br />
        <label class="form-label">Instrucciones: </label>
        <input class="form-control" name="instrucciones" type="text" />
        <br />
        <label class="form-label">Fecha limite de entrega: </label>
        <input class="form-control" name="fechaMaxima" type="datetime-local" />
        <br />
        <br />
        <div style="align-content:center; align-items:center; text-align:center;">
            <button class="btn" style="background-color:#ff2f00; color:white;" type="submit">Crear</button>
            <a style="color:#ff2f00;" href="/Profesor/VerMaterialModulo?idModulo=@ViewBag.IdModulo">Cancelar</a>
        </div>

    </form>
</div>

