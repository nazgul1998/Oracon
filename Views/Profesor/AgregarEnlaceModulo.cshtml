<h1 style="text-align:center;" class="display-4">Agregar enlace externo </h1>
<br />
<div class="container">
    <form action="/Profesor/AgregarEnlaceModulo" method="post">
        <input hidden name="idModulo" value="@ViewBag.IdModulo" />
        <label class="form-label">Titulo</label>
        <input class="form-control" type="text" name="titulo" />
        <br />
        <label class="form-label">Descripcion</label>
        <input class="form-control" type="text" name="descripcion" />
        <br />
        <label class="form-label">Enlace externo</label>
        <input class="form-control" name="link" type="url" />
        <br /><br />
        <div style="align-content:center; align-items:center; text-align:center;">
            <button class="btn" style="background-color:#ff2f00; color:white;" type="submit">Crear</button>
            <a style="color:#ff2f00;" href="/Profesor/VerMaterialModulo?idModulo=@ViewBag.IdModulo">Cancelar</a>
        </div>
    </form>

</div>
